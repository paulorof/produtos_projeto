<% form_for @categoria, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label 'descrição' %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.label 'Foto' %><br />
    <%= f.file_field :foto %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
