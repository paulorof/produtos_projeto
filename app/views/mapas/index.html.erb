<h1>Mapas</h1>
<h3><span><%= link_to 'New mapa', new_mapa_path  if logged_in? %></span></h3>
<br />
<div id="table4">
    <table>
      <tr>
        <th>Nome</th>
        <th colspan="3" >
            <% if logged_in? %>
                   Opções
            <% else %>
                   Opção
            <% end %>
        </th>
      </tr>

    <% @mapas.each do |mapa| %>
      <tr>
        <td><%=h mapa.nome %></td>
        <td align="center">
            <%= link_to image_tag('icons/web/visualizar.png',:border => 0, :title => 'Visualizar'), mapa %>
        <% if logged_in? %>
            <%= link_to image_tag('icons/web/editar.png',:border => 0,:title => 'Editar'), edit_mapa_path(mapa) %>
            <%= link_to image_tag('icons/web/apagar.png', :border => 0, :title => 'Apagar'), mapa, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>    
        </td>
      </tr>
    <% end %>
    </table>
</div>

<br />
