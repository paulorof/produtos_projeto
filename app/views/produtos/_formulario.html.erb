<% form_for @produto, :html => {:multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label 'descrição'%><br />
    <%= f.text_area :descricacao, :class => "mceEditor" %>
  </p>
  <p>
    <%= f.label 'Marca' %><br />
    <%= f.collection_select :marca_id, Marca.all, :id, :nome, :include_blank => true %>
  </p>
  <p>Categorias:<br />
  	<% Categoria.find(:all).each do |c| %>
		  <%= check_box_tag 'produto[categoria_ids][]',c.id, @produto.categorias.include?(c)%> <%= c.nome %><br />
	  <% end %>
  </p>
  		
  </p>
  <p>
    <%= f.label :foto %><br />
    <%= f.file_field :foto %>
  </p>
  
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
